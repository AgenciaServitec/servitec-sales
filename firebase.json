{
  "hosting": [
    {
      "public": "packages/hosting/build",
      "target": "app",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "predeploy": ["yarn hosting build"],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ],
      "headers": [
        {
          "source": "/index.html",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "no-cache"
            }
          ]
        },
        {
          "source": "/static/**/*.@(css|js)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=2628000"
            }
          ]
        }
      ]
    },
    {
      "target": "api",
      "headers": [],
      "redirects": [],
      "rewrites": [{ "source": "/**", "function": "api" }]
    }
  ],
  "firestore": {
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run eslint:check",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  }
}
